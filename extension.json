{
	"name": "BlueSpiceAuthors",
	"license-name": "GPL-3.0-only",
	"version": "3.0.0-alpha",
	"url": "https://help.bluespice.com/index.php/Authors",
	"author": [
		"Markus Glaser",
		"Robert Vogel"
	],
	"descriptionmsg": "bs-authors-desc",
	"type": "bluespice",
	"attributes": {
		"BlueSpiceFoundation": {
			"Extensions": {
				"BlueSpiceAuthors": {
					"className": "Authors",
					"extPath": "/BlueSpiceAuthors",
					"configDefinitions": {
						"AuthorsLimit": "\\BlueSpice\\Authors\\ConfigDefinition\\AuthorsLimit::getInstance",
						"AuthorsShow": "\\BlueSpice\\Authors\\ConfigDefinition\\AuthorsShow::getInstance"
					}
				}
			}
		},
		"BlueSpiceArticleInfo": {
			"FlyoutModules": {
				"authors": {
					"module": "ext.bluespice.authors.flyout",
					"make-items-callback": "bs.authors.flyout.makeItems"
				}
			}
		}
	},
	"MessagesDirs": {
		"Authors": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"AuthorsMagic": "languages/Authors.i18n.magic.php"
	},
	"config_prefix": "bsg",
	"config": {
		"AuthorsBlacklist": {
			"value": [
				"MediaWiki default"
			]
		},
		"AuthorsLimit": {
			"value": 10,
			"descriptionmsg": "bs-authors-pref-limit",
			"public": true
		},
		"AuthorsMoreImage": {
			"value": "more-users_v2.png"
		},
		"AuthorsShow": {
			"value": true,
			"descriptionmsg": "bs-authors-pref-show",
			"public": true
		}
	},
	"AutoloadClasses": {
		"Authors": "Authors.class.php",
		"ViewAuthors": "views/view.Authors.php",
		"ViewAuthorsUserPageProfileImageSetting": "views/view.AuthorsUserPageProfileImageSetting.php"
	},
	"Hooks": {
		"SkinTemplateOutputPageBeforeExec": "\\BlueSpice\\Authors\\Hook\\SkinTemplateOutputPageBeforeExec\\AddAuthors::callback",
		"BeforePageDisplay": [
			"\\BlueSpice\\Authors\\Hook\\BeforePageDisplay\\AddModules::callback",
			"\\BlueSpice\\Authors\\Hook\\BeforePageDisplay\\FetchAuthors::callback"
		]
	},
	"ResourceModules": {
		"ext.bluespice.authors": {
			"styles": [
				"styles/bluespice.authors.less"
			],
			"scripts": [
				"js/bluespice.authors.GraphicalList.js"
			],
			"messages": [
				"bs-authors-graphicallist-title-originator",
				"bs-authors-graphicallist-title-authors"
			],
			"dependencies": [
				"ext.bluespice"
			]
		},
		"ext.bluespice.authors.flyout": {
			"scripts": [
				"js/bluespice.authors.flyout.js"
			],
			"messages": [
				"bs-authors-flyout-title"
			],
			"dependencies": [
				"ext.bluespice",
				"ext.bluespice.extjs"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "BlueSpiceAuthors/resources"
	},
	"load_composer_autoloader" : true,
	"manifest_version": 2
}
